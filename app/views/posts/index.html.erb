<%= render 'partial/flash_messages' %>
<div class="container">
    <div class="row">
    <% @posts.each do |post| %>
        <div class="post-item col-md-6 offset-md-3 "> 
            <div class="post-user-name">
                <p><%= post.user.name%></p>
            </div>
            <div class="post-img">
                <%= image_tag post.img.url %>
            </div>
            <div class="post-title">
                <p><%= post.title%></p>
            </div>
            <div class="post-time">
            <p><%= post.created_at.strftime('%Y/%m/%d') %></p>
            </div>
        <%= link_to "詳細画面へ", "/posts/#{post.id}", class: "btn btn-success " %>
        </div>
    <% end %>
    </div>
    <%= paginate @posts %>
</div>
