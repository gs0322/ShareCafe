<div class="container">
		<div class="row">
			<div class="user-show-item col-md-6 offset-md-3">
				<div class="user-show-img">
					<%= image_tag @user.img.url , :class => "profile-icon" %>
				</div>
				<div class="user-show-name">
					<h2><%= @user.name %></h2>
				</div>
				<div class="user-edit-btn">
					<%if current_user.id == @user.id   %><%= link_to "アカウント編集",profile_edit_path ,  class: "btn btn-outline-dark "  %><%end %>
				</div>
			</div>
		</div>
		
		
		
<ul class="nav nav-tabs  justify-content-center" role="tablist">
<li class="nav-item">
    <a class="nav-link active post-tab" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">投稿一覧</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">お気に入り</a>
  </li>
</ul>
<div class="tab-content">
 <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab"><%= render partial: 'partial/user_post', locals: { user: @user} %></div>
  <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab"><%= render partial: 'partial/favorite_post', locals: { favorite_posts: @favorite_posts} %></div>
</div>
	</div>
	
