<div class="container">
		<div class="row">
			<div class="user-show-item col-md-6 offset-md-3">
				<div class="user-show-img">
					<%= image_tag @user.img.url , :class => "profile-icon" %>
				</div>
				<div class="user-show-name">
					<h2><%= @user.name %></h2>
				</div>
				<div class="user-edit-btn">
					<%if current_user.id == @user.id   %><%= link_to "アカウント編集",profile_edit_path ,  class: "btn btn-outline-dark "  %><%end %>
				</div>
			</div>
		</div>
		<% if @user.posts.present?%>
		<h2 class="user-show-post">投稿一覧</h2>
		<div class="row">
			<%@user.posts.each do |post| %>
			<div class="post-item col-md-6 offset-md-3">
				<div class="post-user-name">
					<%= image_tag post.user.img.url, :class => "post-user-icon" %><%= link_to post.user.name, "/users/#{post.user.id}"     , class: " user-link" %>
				</div>
				<div class="post-img">
					<%= image_tag post.img.url %>
				</div>
				<div class="post-title">
					<p><%= post.title%></p>
				</div>
				<h4 class="mb-3">評価：<%= post.rate %>点</h4>
				<div id="star-rate-<%= post.id %>"></div>
				<script>
                    $('#star-rate-<%= post.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= post.rate %>,
                    });
				</script>
				<div class="post-btn">
					<%= link_to "詳細画面へ", "/posts/#{post.id}", class: "btn btn-outline-dark " %>
				</div>
				<div id="favorites_buttons_<%= post.id %>">
        <%= render partial:'favorites/favorite', locals: { post: post} %>
				</div>
				<div class="post-time">
					<p><%= post.created_at.strftime('%Y/%m/%d') %></p>
				</div>
				<div class="post-edit-btn">
					<%if user_signed_in? &&post.user_id == current_user.id %><%= link_to "編集", "/posts/#{post.id}/edit",  class: "btn btn-outline-dark " %><%= link_to "削除","/posts/#{post.id}/destroy",method:"post",  class: "btn btn-outline-dark ", data: { confirm: "削除しますか？" }  %><%end %>
				</div>
			</div>
			<%end %>
			<% else %>
		<h2 class="user-show-post">投稿はまだありません</h2>
		<%end %>
		</div>
	</div>
